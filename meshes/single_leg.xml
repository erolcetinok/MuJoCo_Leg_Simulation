<mujoco model="single_leg">
    <compiler angle="radian"/>

    <!-- Keep gravity off initially to debug pure kinematics -->
    <option gravity="0 0 0"/>

    <asset>
        <!-- STL paths relative to THIS XML file (meshes/) -->
        <mesh name="body_mesh"     file="../models/body.STL"/>
        <mesh name="shoulder_mesh" file="../models/shoulder.STL"/>
<!--        <mesh name="thigh_mesh" file="../models/thigh.STL"/>-->
<!--        <mesh name="foot_mesh"     file="../models/foot.STL"/>-->

        <!-- simple grid texture -->
        <texture name="texgrid" type="2d" builtin="checker"
                 rgb1="0.2 0.2 0.2" rgb2="0.85 0.85 0.85"
                 width="512" height="512"/>
        <material name="grid" texture="texgrid" texrepeat="10 10" reflectance="0.2"/>
    </asset>

    <worldbody>
        <!-- ground grid + world axes -->
        <geom name="ground" type="plane" size="5 5 0.1" material="grid" rgba="1 1 1 1"/>

        <site name="world_x" type="capsule" fromto="0 0 0  0.25 0 0" size="0.004" rgba="1 0 0 1"/>
        <site name="world_y" type="capsule" fromto="0 0 0  0 0.25 0" size="0.004" rgba="0 1 0 1"/>
        <site name="world_z" type="capsule" fromto="0 0 0  0 0 0.25" size="0.004" rgba="0 0 1 1"/>

        <!-- BODY (fixed) -->
        <body name="body" pos="0 0 0">
            <geom type="mesh" mesh="body_mesh"/>

            <!-- SHOULDER (origin at shoulder joint in your STL) -->
            <body name="shoulder" pos="-5 0 85">
                <joint name="shoulder_joint" type="hinge" axis="0 0 1" range="-1.57 1.57"/>
                <geom type="mesh" mesh="shoulder_mesh"/>

                <!--
                <body name="thigh" pos="0 0 0">
                    <joint name="wing_joint" type="hinge" axis="0 1 0" range="-0.785 0.785"/>
                    <geom type="mesh" mesh="thigh_mesh"/>

                    <body name="foot" pos="0 0 0">
                        <joint name="knee_joint" type="hinge" axis="0 1 0" range="-2.094 0"/>
                        <geom type="mesh" mesh="foot_mesh"/>

                        <site name="foot_site" pos="0 0 0" size="0.01" rgba="1 0 0 1"/>
                    </body>
                </body>
                -->
            </body>
        </body>
    </worldbody>
</mujoco>